---
import NoiseBackground from '../components/NoiseBackground.astro';
import Footer from '../components/footer.astro';

import { Image } from 'astro:assets';
import trazoblanco from '/public/assets/trazoblanco.png';
import trazo from '/public/assets/Trazo.png';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bastardos 游뛃</title>
    <style>
      @font-face {
        font-family: 'StreetSoul';
        src: url('../fonts/StreetSoul.woff2') format('woff2');
        font-weight: normal;
        font-style: normal;
      }

      @font-face {
        font-family: 'GimbalExtendedRegular';
        src: url('../fonts/GimbalExtendedRegular.woff2') format('woff2');
        font-weight: normal;
        font-style: normal;
      }

      @font-face {
        font-family: 'SteelFish';
        src: url('../fonts/steelfish.otf') format('opentype');
        font-weight: normal;
        font-style: normal;
      }

      /* Efecto de desenfoque */
      .blur-background {
        backdrop-filter: blur(5px);
        transition: filter 0.3s ease;
      }

      .mouse_scroll.hidden {
        opacity: 0;
        visibility: hidden;
        transition:
          opacity 0.3s ease,
          visibility 0.3s ease;
      }

      .fade-in-scroll {
        opacity: 0;
        transition: opacity 2s ease-in-out;
      }

      .fade-in-scroll.visible {
        opacity: 1;
      }

      .mouse_scroll {
        display: block;
        margin: 0 auto;
        width: 24px;
        height: 100px;
      }

      .m_scroll_arrows {
        display: block;
        width: 5px;
        height: 5px;
        -ms-transform: rotate(45deg); /* IE 9 */
        -webkit-transform: rotate(45deg); /* Chrome, Safari, Opera */
        transform: rotate(45deg);

        border-right: 2px solid rgb(255, 255, 255);
        border-bottom: 2px solid rgb(255, 255, 255);
        margin: 0 0 3px 4px;

        width: 16px;
        height: 16px;
      }

      .unu {
        margin-top: 1px;
      }

      .unu,
      .doi,
      .trei {
        -webkit-animation: mouse-scroll 1s infinite;
        -moz-animation: mouse-scroll 1s infinite;
        animation: mouse-scroll 1s infinite;
      }

      .unu {
        -webkit-animation-delay: 0.1s;
        -moz-animation-delay: 0.1s;
        -webkit-animation-direction: alternate;

        animation-direction: alternate;
        animation-delay: alternate;
      }

      .doi {
        -webkit-animation-delay: 0.2s;
        -moz-animation-delay: 0.2s;
        -webkit-animation-direction: alternate;

        animation-delay: 0.2s;
        animation-direction: alternate;

        margin-top: -6px;
      }

      .trei {
        -webkit-animation-delay: 0.3s;
        -moz-animation-delay: 0.3s;
        -webkit-animation-direction: alternate;

        animation-delay: 0.3s;
        animation-direction: alternate;

        margin-top: -6px;
      }

      .mouse {
        height: 42px;
        width: 24px;
        border-radius: 14px;
        transform: none;
        border: 2px solid rgb(255, 255, 255);
        top: 170px;
      }

      .wheel {
        height: 5px;
        width: 2px;
        display: block;
        margin: 5px auto;
        background: white;
        position: relative;

        height: 4px;
        width: 4px;
        border: 2px solid #ffffff;
        -webkit-border-radius: 8px;
        border-radius: 8px;
      }

      .wheel {
        -webkit-animation: mouse-wheel 0.6s linear infinite;
        -moz-animation: mouse-wheel 0.6s linear infinite;
        animation: mouse-wheel 0.6s linear infinite;
      }

      @-webkit-keyframes mouse-wheel {
        0% {
          opacity: 1;
          -webkit-transform: translateY(0);
          -ms-transform: translateY(0);
          transform: translateY(0);
        }

        100% {
          opacity: 0;
          -webkit-transform: translateY(6px);
          -ms-transform: translateY(6px);
          transform: translateY(6px);
        }
      }
      @-moz-keyframes mouse-wheel {
        0% {
          top: 1px;
        }
        25% {
          top: 2px;
        }
        50% {
          top: 3px;
        }
        75% {
          top: 2px;
        }
        100% {
          top: 1px;
        }
      }
      @-o-keyframes mouse-wheel {
        0% {
          top: 1px;
        }
        25% {
          top: 2px;
        }
        50% {
          top: 3px;
        }
        75% {
          top: 2px;
        }
        100% {
          top: 1px;
        }
      }
      @keyframes mouse-wheel {
        0% {
          top: 1px;
        }
        25% {
          top: 2px;
        }
        50% {
          top: 3px;
        }
        75% {
          top: 2px;
        }
        100% {
          top: 1px;
        }
      }

      @-webkit-keyframes mouse-scroll {
        0% {
          opacity: 0;
        }
        50% {
          opacity: 0.5;
        }
        100% {
          opacity: 1;
        }
      }
      @-moz-keyframes mouse-scroll {
        0% {
          opacity: 0;
        }
        50% {
          opacity: 0.5;
        }
        100% {
          opacity: 1;
        }
      }
      @-o-keyframes mouse-scroll {
        0% {
          opacity: 0;
        }
        50% {
          opacity: 0.5;
        }
        100% {
          opacity: 1;
        }
      }
      @keyframes mouse-scroll {
        0% {
          opacity: 0;
        }
        50% {
          opacity: 0.5;
        }
        100% {
          opacity: 1;
        }
      }

      .fade-in {
        opacity: 0; /* Comienza siendo invisible */
        transition: opacity 2s ease-in-out; /* La transici칩n dura 2 segundos */
      }

      .visible {
        opacity: 1; /* Cuando es visible, tendr치 opacidad 1 (totalmente visible) */
      }

      .neon_green {
        text-shadow:
        0 0 5px #4edd56,
        0 0 10px #4edd56,
        0 0 20px #4edd56,
        0 0 40px #3ac441,
        0 0 80px #3ac441,
        0 0 90px #3ac441;
      }

      .neon_magenta {
        text-shadow:
          0 0 5px #c934b5,
          0 0 10px #c934b5,
          0 0 20px #c934b5,
          0 0 40px #a0178e,
          0 0 80px #a0178e,
          0 0 90px #a0178e;
      }

      /*
      0 0 5px #303130,
      0 0 10px #303130,
      0 0 20px #303130,
      0 0 40px #757575,
      0 0 80px #757575,
      0 0 90px #757575;

			0 0 5px#f7f3c4,    
			0 0 10px#f7f3c4,  
			0 0 20px#f7f3c4,   
			0 0 40px#f7f3c4,   
			0 0 80px#f7f3c4,  
			0 0 90px#f7f3c4; 

      0 0 5px #fff000,
      0 0 10px #fff000,
      0 0 20px #fff000,
      0 0 40px #ffcc00,
      0 0 80px #ffcc00,
      0 0 90px #ffcc00;
		*/
    </style>
  </head>
  <body class="bg-secondary text-empty flex flex-col h-screen">
    <NoiseBackground />
    <!-- Header -->
    <header id="header" class="p-3 FirstBreakPoint:p-6 flex justify-center items-center bg-[#28144588] font-StreetSoul z-20 fixed w-svw"> <!--[#9696963d] -->
      <nav class="hidden FirstBreakPoint:flex space-x-20 font-GimbalExtendedRegular text-sm">
        <a href="/" class="text-primary transition-colors">inicio</a>
        <a href="/personajes" class="text-primary transition-colors">personajes</a>
        <a href="/creditos" class="text-primary transition-colors">cr칠ditos</a>
        <a href="/contacto" class="text-primary transition-colors">contacto</a>
      </nav>
      <button id="menu-toggle" class="FirstBreakPoint:hidden flex items-center">
        <svg class="w-6 h-6" fill="none" stroke="#fff" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </header>

    <!-- Menu m칩vil -->
    <nav id="mobile-menu" class="fixed inset-0 p-4 FirstBreakPoint:hidden hidden bg-[#281445] z-30 font-GimbalExtendedRegular h-60 w-svw">
      <div class="flex justify-between items-center mb-4">
        <div class="text-2xl font-bold">
          <a href="/" class="text-primary text-4xl font-StreetSoul">Bastardos</a>
        </div>
        <button id="menu-close" class="flex items-center">
          <svg class="w-6 h-6" fill="none" stroke="#fff" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <ul class="space-y-4">
        <li>
          <a href="/" class="block text-primary border-b-2 border-empty">inicio</a>
        </li>
        <li>
          <a href="/personajes" class="block text-primary border-b-2 border-empty">personajes</a>
        </li>
        <li>
          <a href="/creditos" class="block text-primary border-b-2 border-empty">cr칠ditos</a>
        </li>
        <li>
          <a href="/contacto" class="block text-primary border-b-2 border-empty">contacto</a>
        </li>
      </ul>
    </nav>

    <!-- Contenedor de contenido -->
    <div class="flex-1 relative z-10">
      <!-- Secci칩n de contenido -->
      <section class="w-full flex flex-col justify-center items-center pt-12 relative z-10 bg-secondary h-svh">
        <div class="mx-auto text-center flex flex-1 flex-col justify-center">
          <div class="leading-none mb-4">
            <h1 class="text-primary font-StreetSoul text-8xl SecondBreakPoint:text-title_breakpoint FirstBreakPoint:text-title neon_magenta">Bastardos</h1>
            <h2 class="text-empty font-GimbalExtendedRegular text-base SecondBreakPoint:text-subtitle_breakpoint FirstBreakPoint:text-subtitle underline underline-offset-4">el precio de los pecados</h2>
          </div>
          <a href="#" class="border text-empty border-primary rounded-full font-GimbalExtendedRegular text-xs FirstBreakPoint:text-base hover:text-view_more transition-colors px-5 mx-auto mt-1 sm:mt-5">ver trailer</a>
        </div>
        <div class="mouse_scroll">
          <div class="mouse">
            <div class="wheel"></div>
          </div>
          <div>
            <span class="m_scroll_arrows unu"></span>
            <span class="m_scroll_arrows doi"></span>
            <span class="m_scroll_arrows trei"></span>
          </div>
        </div>
      </section>

      <section class="bg-black">
        <!-- Contenedor para la primera imagen -->
        <div class="relative overflow-hidden w-full">
          <Image loading="lazy" src={trazo} alt="Trazo" style="transform: scaleX(-1) scaleY(-1);" class="max-w-[300%] FirstBreakPoint:w-full bg-secondary" />
        </div>

        <!-- Contenedor principal -->
        <div class="flex flex-col justify-center max-w-7xl mx-auto mt-32">
          <div class="ml-5 mr-5 text-center fade-in flex flex-col gap-y-6">
            <h1 class="font-StreetSoul text-5xl sm:text-6xl FirstBreakPoint:text-8xl text-empty neon_green">Serie dramatica rodada en Madrid.</h1>
            <Image src={trazoblanco} alt="trazo_blanco" class="mx-auto" style="filter:brightness(1)" />
            <p class="text-xl FirstBreakPoint:text-4xl" style="font-family: 'Times New Roman', Times, serif;">Bastardos es un drama que ofrece un gran dilema al espectador y es si los criminales son criminales porque s칤 y casi por gusto o por el entorno en el cual se han criado y del que se han nutrido.</p>
          </div>
        </div>
        <div class="relative overflow-hidden w-full pt-16">
          <Image src={trazo} alt="Trazo" style="" class="max-w-[300%] FirstBreakPoint:w-full bg-secondary" />
        </div> 
      </section>
      <div class="custom-heading-container flex justify-center">
        <h1 class="font-StreetSoul text-6xl sm:text-8xl FirstBreakPoint:text-[12rem] text-empty relative">
          Responsables
          <a href="#" class="svg-link">
            <svg viewBox="0 0 70 36">
              <path d="M6.9739 30.8153H63.0244C65.5269 30.8152 75.5358 -3.68471 35.4998 2.81531C-16.1598 11.2025 0.894099 33.9766 26.9922 34.3153C104.062 35.3153 54.5169 -6.68469 23.489 9.31527" />
            </svg>
          </a>
        </h1>
      </div>
      <style>

          .custom-heading-container h1 {
              position: relative;
              z-index: 1; /* Aseg칰rate de que el texto est칠 por encima del SVG */
          }

          .svg-link {
              display: block; /* Cambia de inline-block a block para que pueda rodear todo el h1 */
              position: absolute;
              top: 50%;
              left: 50%;
              transform: translate(-50%, -50%);
              width: 90%; /* Asegura que el SVG se expanda para rodear el texto */
              height: 90%;
              z-index: 0; /* Coloca el SVG detr치s del texto */
              
          }

          .svg-link svg {
              width: 100%;
              height: 110%;
              position: absolute;
              left: 50%;
              top: 50%;
              transform: translate(-50%, -50%);
              fill: none;
              stroke: var(--stroke, #ffffff); /* Valor predeterminado si no se define --stroke */
              stroke-linecap: round;
              stroke-width: 2px;
              stroke-dasharray: var(--offset, 69px) 278px;
              stroke-dashoffset: 361px;
              transition: stroke 0.25s ease-in-out var(--stroke-delay, 0s), stroke-dasharray 0.35s ease-in-out;
          }

          .svg-link:hover {
              --spacing: 4px;
              --stroke: #d33838; /* Color del trazo al hacer hover, por ejemplo rojo */
              --stroke-delay: 0.1s;
              --offset: 180px;
          }
      </style>
        <section>
          <div class="flex flex-col md:flex-row gap-16 justify-center">
            <div class="gap-8 items-center py-4 max-w-screen-xl flex flex-col relative">
              <div class="relative group">
                <!-- Imagen -->
                <img src="/assets/ImagenCopo.png" class="w-[330px] md:w-[700px] border-2 border-black transition-opacity duration-300 ease-in-out group-hover:opacity-0" />
                
                <!-- Texto sobre la imagen -->
                <h2 class="mb-4 text-2xl sm:text-3xl tracking-tight font-extrabold text-white absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-in-out z-10" style="font-family: 'Times New Roman', Times, serif;">
                  Samuel Fern치ndez L칩pez
                </h2>
                
                <!-- Fondo negro -->
                <div class="absolute inset-0 bg-[#d33838] opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-in-out z-0"></div>
              </div>
            </div>
          
            <div class="flex flex-row gap-16 justify-center">
              <div class="gap-8 items-center py-4 max-w-screen-xl flex flex-col relative">
                <div class="relative group">
                  <!-- Imagen -->
                  <img src="/assets/ImagenCopo.png" class="w-[330px] md:w-[700px] border-2 border-black transition-opacity duration-300 ease-in-out group-hover:opacity-0" />
                  
                  <!-- Texto sobre la imagen -->
                  <h2 style="font-family: 'Times New Roman', Times, serif;" class="mb-4 text-2xl sm:text-3xl font-extrabold text-white absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-in-out z-10">
                    Patricia Carvajal S치nchez 
                  </h2>
                  
                  <!-- Fondo negro -->
                  <div class="absolute inset-0 bg-[#d33838] opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-in-out z-0"></div>
                </div>
              </div>

        </section>

        <div class="relative overflow-hidden w-full">
          <Image loading="lazy" src={trazo} alt="Trazo" style="transform: scaleX(-1) scaleY(-1);" class="max-w-[300%] FirstBreakPoint:w-full bg-secondary" />
        </div>
        <div class=" bg-black">
          <div class="flex justify-center flex-col max-w-7xl mx-auto">
            <h1 class="font-StreetSoul text-6xl sm:text-8xl FirstBreakPoint:text-[12rem] text-empty text-center neon_green mt-20 mb-5">
              Making Off
            </h1>
            <p class="text-xl FirstBreakPoint:text-4xl text-center ml-5 mr-5" style="font-family: 'Times New Roman', Times, serif;">El <em>Making Off</em> de Bastardos ha sido una tarea compleja, que ha llevado de m치s de <em><b> 1 a침o de preparaci칩n</b></em>. En el siguiente video ilustrativo, se habla con los creadores
            sobre temas como los pasos que se han seguido a la hora de crear la serie, la evoluci칩n, grabaciones sin un presupuesto, etc. </p>
            <div
              class="embed-responsive embed-responsive-21by9 relative w-full overflow-hidden mt-7"
              style="padding-top: 42.857143%">
              <iframe
                class="embed-responsive-item absolute bottom-0 left-0 right-0 top-0 h-full w-[98%] mx-auto"
                src="https://www.youtube.com/embed/vlDzYIIOYmM?enablejsapi=1&amp;origin=https%3A%2F%2Fmdbootstrap.com"
                allowfullscreen=""
                data-gtm-yt-inspected-2340190_699="true"
                id="240632615"></iframe>
            </div>
          </div>
        </div>
        <div class="relative overflow-hidden w-full">
          <Image src={trazo} alt="Trazo" style="" class="max-w-[300%] FirstBreakPoint:w-full bg-secondary" />
        </div> 
        <Footer />
      </div>

      <script>
        // Script para el men칰 m칩vil
        document.getElementById('menu-toggle').addEventListener('click', function () {
          document.getElementById('mobile-menu').classList.toggle('hidden');
        });

        document.getElementById('menu-close').addEventListener('click', function () {
          document.getElementById('mobile-menu').classList.add('hidden');
        });

        let hasScrolled = false;
        window.addEventListener('scroll', function () {
          if (!hasScrolled) {
            document.getElementById('header').classList.add('blur-background');
            hasScrolled = true;
          }

          const scrollButton = document.querySelector('.mouse_scroll');

          if (window.scrollY > 50) {
            scrollButton.classList.add('hidden');
            scrollButton.classList.remove('fade-in-scroll', 'visible');
          } else {
            setTimeout(() => {
              scrollButton.classList.remove('hidden');
              scrollButton.classList.add('fade-in-scroll');
              setTimeout(() => {
                scrollButton.classList.add('visible');
              }, 100);
            }, 5000);
          }
        });

        document.addEventListener('DOMContentLoaded', function () {
          const fadeInSection = document.querySelector('.fade-in'); // Selecciona el texto a aplicar el fade-in
          const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                fadeInSection.classList.add('visible'); // A침ade la clase visible cuando entra en el viewport
              }
            });
          });

          observer.observe(fadeInSection); // Observa el texto para la animaci칩n
        });
      </script>

      <script src="../../node_modules/flowbite/dist/flowbite.min.js"></script>
    </div>
  </body>
</html>
